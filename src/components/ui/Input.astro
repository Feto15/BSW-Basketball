---
interface Props {
  type?: string;
  placeholder?: string;
  class?: string;
  name?: string;
}

const { type = 'text', placeholder = '', class: className = '', name } = Astro.props;
---

<input 
  type={type}
  placeholder={placeholder}
  name={name}
  class={`border-2 border-neutral-200 rounded-lg p-4 w-full font-medium focus:border-lime-400 transition-colors outline-none ${className}`}
/>

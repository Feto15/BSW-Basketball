---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = 'BSW Basketball - Developing Champions On and Off the Court', 
	description = 'Building champions on and off the court through expert coaching and character development.' 
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
